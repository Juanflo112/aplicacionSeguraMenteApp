<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo">


    <!-- Header -->
    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="124dp"
        android:background="@drawable/header_backgroundf"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">


        <ImageView
            android:layout_width="94dp"
            android:layout_height="81dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logo_segura_mente" />

        <LinearLayout
            android:layout_width="239dp"
            android:layout_height="55dp"
            android:background="@drawable/header_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRegistroTexto"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Menu de opciones"
                android:textAlignment="center"
                android:textColor="@color/Azul"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Menu Content -->
    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/fondomenu"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Cat치logo de Servicios -->

        <!-- Divider -->
        <LinearLayout
            android:id="@+id/menuCatalogoServicios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_catalog"
                android:tint="@color/Azul" />

            <TextView
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Cat치logo de Servicios"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="68dp"
             />

        <!-- Mi lugar Seguro -->
        <LinearLayout
            android:id="@+id/menuMiLugarSeguro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_safe_place"
                android:tint="@color/Azul" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Mi lugar Seguro"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Spacer -->

        <!-- Bottom section -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                />

            <!-- Ajustes -->
            <LinearLayout
                android:id="@+id/menuAjustes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Ajustes"
                    android:textColor="@color/iconos"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Cerrar sesi칩n -->
            <LinearLayout
                android:id="@+id/menuCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_logout"
                    android:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Cerrar sesi칩n"
                    android:textColor="@color/iconos"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Background Image at bottom -->


</LinearLayout>
